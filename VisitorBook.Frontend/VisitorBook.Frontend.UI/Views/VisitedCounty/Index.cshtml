<div class="container">
    <h1 class="text-center">@localization["VisitedCounties.Title.Text"]</h1>
    <div>
        <input type="hidden" id="TableExportBtnText" value="@localization["Table.ExportBtn.Text"]" />
        <input type="hidden" id="TableEditBtnText" value="@localization["Table.EditBtn.Text"]" />
        <input type="hidden" id="TableDeleteBtnText" value="@localization["Table.DeleteBtn.Text"]" />
        <input type="hidden" id="ActiveLanguage" value="@Thread.CurrentThread.CurrentCulture.Name" />
        <input type="hidden" id="AddOrEditModalCountySelectionText"
            value="@localization["AddOrEditModal.CountySelection.Text"]" />

        <input type="hidden" id="VisitedCountiesEditModalTitleText"
            value="@localization["VisitedCounties.EditModal.Title.Text"]" />
        <input type="hidden" id="DeleteRequestPopupTitleText" value="@localization["DeleteRequestPopup.Title.Text"]" />
        <input type="hidden" id="DeleteRequestPopupBodyText" value="@localization["DeleteRequestPopup.Body.Text"]" />
        <input type="hidden" id="DeleteRequestPopupConfirmBtnText"
            value="@localization["DeleteRequestPopup.ConfirmBtn.Text"]" />
        <input type="hidden" id="DeleteRequestPopupCancelBtnText"
            value="@localization["DeleteRequestPopup.CancelBtn.Text"]" />

        <div class="float-start" id="outside">
        </div>
        <div class="float-end">
            <a onclick="showInPopup('@Url.Action("Add", "VisitedCounty", new { Id = 0 }, Context.Request.Scheme)', '@localization["VisitedCounties.AddModal.Title.Text"]')"
                class="btn btn-primary mb-3 float-end" role='button'>
                @localization["Table.AddBtn.Text"]
            </a>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    @localization["VisitedCounties.Table.Column1.Text"]
                </th>
                <th>
                    @localization["VisitedCounties.Table.Column2.Text"]
                </th>
                <th>
                    @localization["VisitedCounties.Table.Column3.Text"]
                </th>
                <th>
                    @localization["VisitedCounties.Table.Column4.Text"]
                </th>
                <th>

                </th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/visited-county.js"></script>
}
