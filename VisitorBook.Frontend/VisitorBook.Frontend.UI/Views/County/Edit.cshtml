@model CountyViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<script type="text/javascript">
    $('#city-select-field').select2({
        dropdownParent: $('#form-modal'),
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
        language: document.getElementById('ActiveLanguage').value.substring(0, 2)
    });
</script>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@ViewData["Id"]" onsubmit="return EditRecord(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@ViewData["Id"]" />
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="County.Name" class="control-label">@localization["Counties.Table.Column1.Text"]</label>
                    <input asp-for="County.Name" class="form-control" />
                    <span asp-validation-for="County.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="County.Latitude" class="control-label">@localization["Counties.Table.Column4.Text"]</label>
                        <input asp-for="County.Latitude" class="form-control" />
                        <span asp-validation-for="County.Latitude" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="County.Longitude" class="control-label">@localization["Counties.Table.Column3.Text"]</label>
                        <input asp-for="County.Longitude" class="form-control" />
                        <span asp-validation-for="County.Longitude" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="County.CityId" class="control-label">@localization["Counties.Table.Column2.Text"]</label>
                    <select asp-for="County.CityId" asp-items="@Model.CityList" class="form-select" id="city-select-field">
                        <option disabled selected>@localization["AddOrEditModal.CitySelection.Text"]</option>
                    </select>
                    <span asp-validation-for="County.CityId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="form-group mt-4">
                        <input type="submit" value="@localization["AddOrEditModal.SubmitBtn.Text"]" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}