<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="brand-link">
        <img src="~/dist/img/visitor-book-logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">@localization["Layout.Header.Title.Text"]</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">

        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Alexander Pierce</a>
            </div>
        </div>
        <!-- Sidebar Menu -->
        @{
            var makeHomeActive = "";
            var makeVisitorActive = "";
            var makeCityActive = "";
            var makeCountyActive = "";
            var makeVisitedCountyActive = "";

            @if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == "home")
            {
                makeHomeActive = "active";
            }
            else if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == "visitor")
            {
                makeVisitorActive = "active";
            }
            else if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == "city")
            {
                makeCityActive = "active";
            }
            else if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == "county")
            {
                makeCountyActive = "active";
            }
            else if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == "visitedcounty")
            {
                makeVisitedCountyActive = "active";
            }
        }
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a class="nav-link @makeHomeActive" asp-area="Admin" asp-controller="Home"
                       asp-action="Index">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            @localization["Layout.Header.Navbar.Items1.Text"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @makeVisitorActive" asp-area="Admin" asp-controller="Visitor"
                       asp-action="Index">
                        <i class="nav-icon fas fa-walking"></i>
                        <p>
                            @localization["Layout.Header.Navbar.Items2.Text"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @makeCityActive" asp-area="Admin" asp-controller="City"
                       asp-action="Index">
                        <i class="nav-icon fas fa-city"></i>
                        <p>
                            @localization["Layout.Header.Navbar.Items3.Text"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @makeCountyActive" asp-area="Admin" asp-controller="County"
                       asp-action="Index">
                        <i class="nav-icon fas fa-building"></i>
                        <p>
                            @localization["Layout.Header.Navbar.Items4.Text"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @makeVisitedCountyActive" asp-area="Admin" asp-controller="VisitedCounty"
                       asp-action="Index">
                        <i class="nav-icon fas fa-car-side"></i>
                        <p>
                            @localization["Layout.Header.Navbar.Items5.Text"]
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>