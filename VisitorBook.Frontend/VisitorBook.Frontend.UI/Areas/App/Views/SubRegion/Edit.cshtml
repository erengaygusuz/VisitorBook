@model SubRegionViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@ViewData["Id"]" onsubmit="return EditRecord(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@ViewData["Id"]" />
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="@Model.SubRegion.Name" class="control-label">@localization["Cities.Table.Column1.Text"]</label>
                        <input asp-for="@Model.SubRegion.Name" class="form-control" />
                        <span asp-validation-for="@Model.SubRegion.Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="@Model.SubRegion.RegionId" class="control-label">@localization["Counties.Table.Column2.Text"]</label>
                        <select asp-for="@Model.SubRegion.RegionId" asp-items="@Model.RegionList" class="form-control select2" style="width: 100% !important;" id="city-select-field">
                            <option disabled selected>@localization["AddOrEditModal.CitySelection.Text"]</option>
                        </select>
                        <span asp-validation-for="@Model.SubRegion.RegionId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="form-group mt-4">
                        <input type="submit" value="@localization["AddOrEditModal.SubmitBtn.Text"]" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}