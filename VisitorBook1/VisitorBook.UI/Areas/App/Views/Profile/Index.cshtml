@model ProfileViewModel

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@localization["Profiles.Title.Text"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@localization["Role." + @User.Claims.Where(x => x.Type == ClaimTypes.Role).Select(x => x.Value).FirstOrDefault() + ".Text"]</li>
                    <li class="breadcrumb-item active">@localization["Profiles.Title.Text"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">@localization["Profiles.GeneralTab.Title.Text"]</a></li>
                            <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">@localization["Profiles.SecurityTab.Title.Text"]</a></li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <input type="hidden" id="ActiveLanguage" value="@Thread.CurrentThread.CurrentCulture.Name" />
                        <div class="tab-content">
                            <div class="active tab-pane" id="activity">
                                <form class="form-horizontal" asp-area="App" asp-controller="Profile" asp-action="UpdateGeneralInfo" id="UpdateGeneralInfoForm">
                                    <div class="form-group row">
                                        <label for="name" class="col-sm-2 col-form-label">@localization["Profiles.GeneralTab.Row1.Text"]</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="name" name="name" value="@Model.UserGeneralInfo.Name" placeholder="@localization["Profiles.GeneralTab.Row1.Text"]">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="surname" class="col-sm-2 col-form-label">@localization["Profiles.GeneralTab.Row2.Text"]</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="surname" name="surname" value="@Model.UserGeneralInfo.Surname" placeholder="@localization["Profiles.GeneralTab.Row2.Text"]">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="birthdate" class="col-sm-2 col-form-label">@localization["Profiles.GeneralTab.Row3.Text"]</label>
                                        <div class="col-sm-10">
                                            <div class="input-group date" id="user-birthdate" data-target-input="nearest">
                                                <input type="text" class="form-control datetimepicker-input" data-target="#user-birthdate" name="birthDate" id="birthDate" value="@Model.UserGeneralInfo.BirthDate">
                                                <div class="input-group-append" data-target="#user-birthdate" data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="phoneNumber" class="col-sm-2 col-form-label">@localization["Profiles.GeneralTab.Row4.Text"]</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="@Model.UserGeneralInfo.PhoneNumber" data-inputmask='"mask": "(999) 999-9999"' data-mask>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="gender" class="col-sm-2 col-form-label">@localization["Profiles.GeneralTab.Row5.Text"]</label>
                                        <div class="col-sm-10">
                                            <select asp-for="@Model.UserGeneralInfo.Gender" id="" asp-items="@Model.GenderList" class="form-control select2" style="width: 100% !important;" name="gender" id="gender">
                                                <option disabled selected>@localization["AddOrEditModal.GenderSelection.Text"]</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-sm-2 col-sm-10">
                                            <button type="submit" class="btn btn-success">@localization["Profiles.SubmitBtn.Text"]</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane" id="settings">
                                <form class="form-horizontal" asp-area="App" asp-controller="Profile" asp-action="UpdateSecurityInfo" id="UpdateSecurityInfoForm">
                                    <div class="form-group row">
                                        <label for="username" class="col-sm-2 col-form-label">@localization["Profiles.SecurityTab.Row1.Text"]</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="username" id="username" class="form-control" value="@Model.UserSecurityInfo.Username" placeholder="@localization["Profiles.SecurityTab.Row1.Text"]" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="email" class="col-sm-2 col-form-label">@localization["Profiles.SecurityTab.Row2.Text"]</label>
                                        <div class="col-sm-10">
                                            <input type="email" name="email" id="email" class="form-control" value="@Model.UserSecurityInfo.Email" placeholder="@localization["Profiles.SecurityTab.Row2.Text"]" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="passwordOld" class="col-sm-2 col-form-label">@localization["Profiles.SecurityTab.Row3.Text"]</label>
                                        <div class="col-sm-10">
                                            <input type="password" name="passwordOld" id="passwordOld" class="form-control" value="@Model.UserSecurityInfo.PasswordOld" placeholder="@localization["Profiles.SecurityTab.Row3.Text"]">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="passwordNew" class="col-sm-2 col-form-label">@localization["Profiles.SecurityTab.Row4.Text"]</label>
                                        <div class="col-sm-10">
                                            <input type="password" name="passwordNew" id="passwordNew" class="form-control" value="@Model.UserSecurityInfo.PasswordNew" placeholder="@localization["Profiles.SecurityTab.Row4.Text"]">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="passwordNewConfirm" class="col-sm-2 col-form-label">@localization["Profiles.SecurityTab.Row5.Text"]</label>
                                        <div class="col-sm-10">
                                            <input type="password" name="passwordNewConfirm" id="passwordNewConfirm" class="form-control" value="@Model.UserSecurityInfo.PasswordNewConfirm" placeholder="@localization["Profiles.SecurityTab.Row5.Text"]">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-sm-2 col-sm-10">
                                            <button type="submit" class="btn btn-success">@localization["Profiles.SubmitBtn.Text"]</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {
    <script src="~/view-resources/app/views/profile/profile.js"></script>
}