<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@localization["Layout.Header.Title.Text"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="~/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Poppins:wght@600;700&display=swap"
          rel="stylesheet" />

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
          rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Fancy Select -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/mdbassit/FancySelect@latest/dist/fancyselect.min.css">

    <!-- Template Stylesheet -->
    <link href="~/view-resources/views/shared/layout.css" rel="stylesheet" />
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
            <h1 class="m-0">
                <img class="img-fluid me-3"
                     src="~/img/icon/app-logo-primary.png"
                     alt="" />@localization["Layout.Header.Title.Text"]
            </h1>
        </a>
        <button type="button"
                class="navbar-toggler"
                data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            @{
                var makeHomeActive = "";
                var makeServiceActive = "";
                var makeContactActive = "";

                if (this.ViewContext.RouteData.Values["action"].ToString().ToLower() == "service")
                {
                    makeServiceActive = "active";
                }
                else if (this.ViewContext.RouteData.Values["action"].ToString().ToLower() == "contact")
                {
                    makeContactActive = "active";
                }

                else
                {
                    makeHomeActive = "active";
                }
            }
            <div class="navbar-nav mx-auto bg-light rounded pe-4 py-3 py-lg-0">
                <a asp-controller="Home" asp-action="Index" class="nav-item nav-link @makeHomeActive">@localization["Home.Navbar.Item1.Text"]</a>
                <a asp-controller="Home" asp-action="Service" class="nav-item nav-link @makeServiceActive">@localization["Home.Navbar.Item2.Text"]</a>
                <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link @makeContactActive">@localization["Home.Navbar.Item3.Text"]</a>
            </div>
            <partial name="_CulturePartial" />
            <partial name="_NavbarLogin" />
        </div>
    </nav>
    <!-- Navbar End -->

    @RenderBody()

    <!-- Footer Start -->
    <div class="container-fluid bg-dark footer mt-5 pt-5 wow fadeIn"
         data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">
                        <img class="img-fluid me-3"
                             src="~/img/icon/app-logo-light.png"
                             alt=""
                             width="64"
                             height="64" />@localization["Layout.Header.Title.Text"]
                    </h5>
                    <p>
                        @localization["Home.Footer.Info1.Text"]
                    </p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-light mb-4">@localization["Home.Footer.Title1.Text"]</h5>
                    <p>
                        <i class="fa fa-map-marker-alt me-3"></i>@localization["Home.Footer.Info2.Text"]
                    </p>
                    <p><i class="fa fa-phone-alt me-3"></i>@localization["Home.Footer.Info3.Text"]</p>
                    <p><i class="fa fa-envelope me-3"></i>@localization["Home.Footer.Info4.Text"]</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-light mb-4">@localization["Home.Footer.Title2.Text"]</h5>
                    <a class="btn btn-link" asp-controller="Home" asp-action="Service">@localization["Home.Navbar.Item2.Text"]</a>
                    <a class="btn btn-link" asp-controller="Home" asp-action="Contact">@localization["Home.Navbar.Item3.Text"]</a>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-light mb-4">@localization["Home.Footer.Title3.Text"]</h5>
                    <p>@localization["Home.Footer.Info5.Text"]</p>
                    <div class="position-relative mx-auto" style="max-width: 400px">
                        <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5"
                               type="text"
                               placeholder="@localization["Home.Footer.Info6.Text"]" />
                        <button type="button"
                                class="btn btn-secondary py-2 position-absolute top-0 end-0 mt-2 me-2">
                            @localization["Home.Footer.SubmitBtn.Text"]
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>

    <!-- Fancy Select -->
    <script src="https://cdn.jsdelivr.net/gh/mdbassit/FancySelect@latest/dist/fancyselect.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/view-resources/views/shared/layout.js"></script>
</body>
</html>