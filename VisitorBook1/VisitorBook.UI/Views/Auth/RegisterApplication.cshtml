@model RegisterApplicationCreateRequestDto

@{
    ViewData["Title"] = "RegisterApplication";
    Layout = "_AuthLayout";
}

<div class="col-md-4 mt-5">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <div class="row">
                <img class="img-fluid mb-4 rounded mx-auto d-block"
                     src="~/img/icon/app-logo-primary.png"
                     alt=""
                     width="64"
                     height="64" />
            </div>
            <h1>@localization["Layout.Header.Title.Text"]</h1>
        </div>
        <div class="card-body">
            <p class="login-box-msg pl-5 pr-5">
                @localization["RegisterApplications.Info1.Text"]
            </p>
            <div id="stepper3" class="bs-stepper">
                <div class="bs-stepper-header" role="tablist">
                    <div class="step" data-target="#test-nlf-1">
                        <button type="button" class="step-trigger" role="tab" id="stepper3trigger1" aria-controls="test-nlf-1" aria-selected="false">
                            <span class="bs-stepper-circle">
                                <span class="fas fa-user" aria-hidden="true"></span>
                            </span>
                            <span class="bs-stepper-label">@localization["RegisterApplications.Tab1.Text"]</span>
                        </button>
                    </div>
                    <div class="bs-stepper-line"></div>
                    <div class="step" data-target="#test-nlf-2">
                        <button type="button" class="step-trigger" role="tab" id="stepper3trigger2" aria-controls="test-nlf-2" aria-selected="false">
                            <span class="bs-stepper-circle">
                                <span class="fas fa-map-marked" aria-hidden="true"></span>
                            </span>
                            <span class="bs-stepper-label">@localization["RegisterApplications.Tab2.Text"]</span>
                        </button>
                    </div>
                    <div class="bs-stepper-line"></div>
                    <div class="step active" data-target="#test-nlf-3">
                        <button type="button" class="step-trigger" role="tab" id="stepper3trigger3" aria-controls="test-nlf-3" aria-selected="true">
                            <span class="bs-stepper-circle">
                                <span class="fas fa-save" aria-hidden="true"></span>
                            </span>
                            <span class="bs-stepper-label">@localization["RegisterApplications.Tab3.Text"]</span>
                        </button>
                    </div>
                </div>
                <div class="bs-stepper-content pb-4 pr-1 pl-1">
                    <form asp-controller="Auth" asp-action="RegisterApplication">
                        <div id="test-nlf-1" role="tabpanel" class="bs-stepper-pane fade dstepper-block dstepper-none" aria-labelledby="stepper3trigger1">
                            <div class="input-group mb-3 mt-2">
                                <input type="text" class="form-control" placeholder="@localization["RegisterApplications.Tab1.Row1.Text"]" asp-for="@Model.Name">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.Name" class="error invalid-feedback"></span>
                            </div>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="@localization["RegisterApplications.Tab1.Row2.Text"]" asp-for="@Model.Surname">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.Surname" class="error invalid-feedback"></span>
                            </div>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="@localization["RegisterApplications.Tab1.Row3.Text"]" asp-for="@Model.Username">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.Username" class="error invalid-feedback"></span>
                            </div>
                            <div class="input-group mb-3">
                                <input type="email" class="form-control" placeholder="@localization["RegisterApplications.Tab1.Row4.Text"]" asp-for="@Model.Email">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.Email" class="error invalid-feedback"></span>
                            </div>
                            <a class="btn btn-primary" onclick="stepper.next()">@localization["RegisterApplications.NextBtn.Text"]</a>
                        </div>
                        <div id="test-nlf-2" role="tabpanel" class="bs-stepper-pane fade dstepper-block dstepper-none" aria-labelledby="stepper3trigger2">
                            <div class="input-group mb-3 mt-2">
                                <textarea class="form-control" rows="6" placeholder="@localization["RegisterApplications.Tab2.Row1.Text"]" asp-for="@Model.Explanation"></textarea>
                                <span asp-validation-for="@Model.Explanation" class="error invalid-feedback"></span>
                            </div>
                            <a class="btn btn-primary" onclick="stepper.next()">@localization["RegisterApplications.NextBtn.Text"]</a>
                        </div>
                        <div id="test-nlf-3" role="tabpanel" class="bs-stepper-pane fade text-center dstepper-block active" aria-labelledby="stepper3trigger3">
                            <button type="submit" class="btn btn-primary mt-5">@localization["RegisterApplications.SubmitBtn.Text"]</button>
                        </div>
                    </form>
                </div>
            </div>
            <p>
                <a asp-controller="Auth" asp-action="Register" class="text-center">@localization["RegisterApplications.Info4.Text"]</a>
            </p>
            <p>
                <a asp-controller="Auth" asp-action="Login" class="text-center">@localization["RegisterApplications.Info2.Text"]</a>
            </p>
            <p>
                <a asp-controller="Home" asp-action="Index" class="text-center">@localization["RegisterApplications.Info3.Text"]</a>
            </p>
            <p>
                <div class="full-width">
                    <partial name="_CulturePartial" />
                </div>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/view-resources/views/registerapplication/register-application.js"></script>
}