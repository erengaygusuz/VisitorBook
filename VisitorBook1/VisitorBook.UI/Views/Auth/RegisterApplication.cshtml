@model RegisterRequestDto

@{
    ViewData["Title"] = "RegisterApplication";
    Layout = "_AuthLayout";
}

<div class="mb-5 p-4 bg-white shadow-sm">
    <h3>Non linear stepper (with fade)</h3>
    <div id="stepper3" class="bs-stepper">
        <div class="bs-stepper-header" role="tablist">
            <div class="step" data-target="#test-nlf-1">
                <button type="button" class="step-trigger" role="tab" id="stepper3trigger1" aria-controls="test-nlf-1" aria-selected="false">
                    <span class="bs-stepper-circle">
                        <span class="fas fa-user" aria-hidden="true"></span>
                    </span>
                    <span class="bs-stepper-label">Name</span>
                </button>
            </div>
            <div class="bs-stepper-line"></div>
            <div class="step" data-target="#test-nlf-2">
                <button type="button" class="step-trigger" role="tab" id="stepper3trigger2" aria-controls="test-nlf-2" aria-selected="false">
                    <span class="bs-stepper-circle">
                        <span class="fas fa-map-marked" aria-hidden="true"></span>
                    </span>
                    <span class="bs-stepper-label">Address</span>
                </button>
            </div>
            <div class="bs-stepper-line"></div>
            <div class="step active" data-target="#test-nlf-3">
                <button type="button" class="step-trigger" role="tab" id="stepper3trigger3" aria-controls="test-nlf-3" aria-selected="true">
                    <span class="bs-stepper-circle">
                        <span class="fas fa-save" aria-hidden="true"></span>
                    </span>
                    <span class="bs-stepper-label">Submit</span>
                </button>
            </div>
        </div>
        <div class="bs-stepper-content">
            <form onsubmit="return false">
                <div id="test-nlf-1" role="tabpanel" class="bs-stepper-pane fade dstepper-block dstepper-none" aria-labelledby="stepper3trigger1">
                    <div class="form-group">
                        <label for="exampleInputName2">Name</label>
                        <input type="email" class="form-control" id="exampleInputName2" placeholder="Enter your name">
                    </div>
                    <button class="btn btn-primary" onclick="stepper.next()">Next</button>
                </div>
                <div id="test-nlf-2" role="tabpanel" class="bs-stepper-pane fade dstepper-block dstepper-none" aria-labelledby="stepper3trigger2">
                    <div class="form-group">
                        <label for="exampleInpuAddress2">Address</label>
                        <input type="email" class="form-control" id="exampleInpuAddress2" placeholder="Enter your address">
                    </div>
                    <button class="btn btn-primary" onclick="stepper.next()">Next</button>
                </div>
                <div id="test-nlf-3" role="tabpanel" class="bs-stepper-pane fade text-center dstepper-block active" aria-labelledby="stepper3trigger3">
                    <button type="submit" class="btn btn-primary mt-5">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="register-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <div class="row">
                <img class="img-fluid mb-4 rounded mx-auto d-block"
                     src="~/img/icon/app-logo-primary.png"
                     alt=""
                     width="64"
                     height="64" />
            </div>
            <h1>@localization["Layout.Header.Title.Text"]</h1>
        </div>
        <div class="card-body">
            <p class="login-box-msg">@localization["Register.SubTitle.Text"]</p>

            

            <a asp-controller="Auth" asp-action="Login" class="text-center">@localization["Register.Item7.Text"]</a>
            <p>
                <a asp-controller="Home" asp-action="Index" class="text-center">@localization["Register.Item8.Text"]</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        var stepper

        $(document).ready(function () {
            stepper = new Stepper($('.bs-stepper')[0], {
                linear: false,
                animation: true
            })
        })
    </script>
}

