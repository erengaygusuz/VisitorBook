<script src="~/js/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/js/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
    $.validator.addMethod('not-include-turkish-character', function (value, element, params) {
        return element.checked;
    });

    $.validator.unobtrusive.adapters.add('not-include-turkish-character', [], function (options) {
        options.rules['not-include-turkish-character'] = {};
        options.messages['not-include-turkish-character'] = options.message;
    });

    $.validator.addMethod('not-include-number', function (value, element, params) {
        return element.checked;
    });

    $.validator.unobtrusive.adapters.add('not-include-number', [], function (options) {
        options.rules['not-include-number'] = {};
        options.messages['not-include-number'] = options.message;
    });
</script>
