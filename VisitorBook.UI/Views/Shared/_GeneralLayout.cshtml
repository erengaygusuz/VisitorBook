<!DOCTYPE html>
<html>
<head>

    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="description" content="@localization["MetaTags.Description.Text"]" />
    <meta name="keywords" content="@localization["MetaTags.Keywords.Text"]" />
    <meta name="author" content="@localization["MetaTags.Author.Text"]" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@localization["Layout.Header.Title.Text"]</title>

    <!-- Favicon -->
    <link href="~/favicon.ico" rel="icon" />

    <!-- General Layout Bundle -->
    <link rel="stylesheet" href="~/bundles/css/general.layout.bundle.min.css" />

</head>

<body>
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
            <h1 class="m-0">
                <img class="img-fluid me-3"
                     src="~/img/icons/app-logo-primary.png"
                     alt="" />@localization["Layout.Header.Title.Text"]
            </h1>
        </a>
        <button type="button"
                class="navbar-toggler"
                data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            @{
                var makeHomeActive = "";
                var makeServiceActive = "";
                var makeContactActive = "";

                if (this.ViewContext.RouteData.Values["action"].ToString().ToLower() == "service")
                {
                    makeServiceActive = "active";
                }
                else if (this.ViewContext.RouteData.Values["action"].ToString().ToLower() == "contact")
                {
                    makeContactActive = "active";
                }

                else
                {
                    makeHomeActive = "active";
                }
            }
            <div class="navbar-nav mx-auto bg-light rounded pe-4 py-3 py-lg-0">
                <a asp-controller="Home" asp-action="Index" class="nav-item nav-link @makeHomeActive">@localization["Home.Navbar.Item1.Text"]</a>
                <a asp-controller="Home" asp-action="Service" class="nav-item nav-link @makeServiceActive">@localization["Home.Navbar.Item2.Text"]</a>
                <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link @makeContactActive">@localization["Home.Navbar.Item3.Text"]</a>
            </div>
            <partial name="_CulturePartial" />
            <partial name="_NavbarLogin" />
        </div>
    </nav>

    @RenderBody()

    <div class="container-fluid bg-dark footer mt-5 pt-5 wow fadeIn"
         data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-lg-4 col-md-4">
                    <h5 class="text-light mb-4">@localization["Home.Footer.Title1.Text"]</h5>
                    <p>
                        <i class="fas fa-map-marker-alt me-3"></i>@localization["Home.Footer.Info2.Text"]
                    </p>
                    <p><i class="fas fa-phone-alt me-3"></i>@localization["Home.Footer.Info3.Text"]</p>
                    <p><i class="fas fa-envelope me-3"></i>@localization["Home.Footer.Info4.Text"]</p>
                </div>
                <div class="col-lg-4 col-md-4">
                    <h5 class="text-light mb-4">@localization["Home.Footer.Title2.Text"]</h5>
                    <a class="btn btn-link" asp-controller="Home" asp-action="Service">@localization["Home.Navbar.Item2.Text"]</a>
                    <a class="btn btn-link" asp-controller="Home" asp-action="Contact">@localization["Home.Navbar.Item3.Text"]</a>
                </div>
                <div class="col-lg-4 col-md-4">
                    <h5 class="text-white mb-4">
                        <img class="img-fluid me-3"
                             src="~/img/icons/app-logo-light.png"
                             alt=""
                             width="64"
                             height="64" />@localization["Layout.Header.Title.Text"]
                    </h5>
                    <p>
                        @localization["Home.Footer.Info1.Text"]
                    </p>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>

    <!-- General Layout Bundle -->
    <script src="~/bundles/js/general.layout.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @await Component.InvokeAsync("Notyf")
</body>
</html>