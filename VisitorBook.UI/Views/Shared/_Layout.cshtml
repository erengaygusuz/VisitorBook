<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VisitorBook.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VisitorBook.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Visitor Book</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Visitor
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Visitor", new { Id = 0 }, Context.Request.Scheme)', 'Add Visitor')"
                                        class="dropdown-item" role='button'>
                                        <i class="fas fa-random"></i> Add Visitor
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="visitor" asp-action="index"
                                        role='button'>List
                                        Cities</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                City
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "City", new { Id = 0 }, Context.Request.Scheme)', 'Add City')"
                                        class="dropdown-item" role='button'>
                                        <i class="fas fa-random"></i> Add City
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="city" asp-action="index" role='button'>List
                                        Cities</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                State
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "State", new { Id = 0 }, Context.Request.Scheme)', 'Add State')"
                                        class="dropdown-item" role='button'>
                                        <i class="fas fa-random"></i> Add State
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="state" asp-action="index"
                                        role='button'>List
                                        States</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Visited States
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "VisitedState", new { Id = 0 }, Context.Request.Scheme)', 'Add Visited State')"
                                        class="dropdown-item" role='button'>
                                        <i class="fas fa-random"></i> Add Visited State
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="visitedstate" asp-action="index"
                                        role='button'>List
                                        Visited States</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal" tabindex="-1" id="form-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title"></h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer fixed-bottom">
        <div class="container text-center">
            &copy; 2023 - Visitor Book
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.13.6/sorting/datetime-moment.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
