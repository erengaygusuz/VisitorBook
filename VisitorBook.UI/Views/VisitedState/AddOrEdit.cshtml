@model VisitedStateViewModel

@{
    ViewData["Title"] = "Add or Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.VisitedState.Id" onsubmit="return AddRecord(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VisitedState.Id" />
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="VisitedState.CityId" class="control-label">@localization["VisitedStates.Table.Column3.Text"]</label>
                    <select id="citylist" onchange="cityChange()" asp-for="VisitedState.CityId" asp-items="@Model.CityList" class="form-select">
                        <option disabled selected value="0">@localization["AddOrEditModal.CitySelection.Text"]</option>
                    </select>
                    <span asp-validation-for="VisitedState.StateId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4" id="statelist">
                <div class="form-group">
                    <label asp-for="VisitedState.StateId" class="control-label">@localization["VisitedStates.Table.Column2.Text"]</label>
                    <select asp-for="VisitedState.StateId" asp-items="@Model.StateList" class="form-select">
                        <option disabled selected value="0">@localization["AddOrEditModal.StateSelection.Text"]</option>
                    </select>
                    <span asp-validation-for="VisitedState.StateId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="VisitedState.VisitorId" class="control-label">@localization["VisitedStates.Table.Column1.Text"]</label>
                    <select asp-for="VisitedState.VisitorId" asp-items="@Model.VisitorList" class="form-select">
                        <option disabled selected>@localization["AddOrEditModal.VisitorSelection.Text"]</option>
                    </select>
                    <span asp-validation-for="VisitedState.VisitorId" class=" text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="VisitedState.Date" class="control-label">@localization["VisitedStates.Table.Column4.Text"]</label>
                    <input asp-for="VisitedState.Date" class="form-control" />
                    <span asp-validation-for="VisitedState.Date" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="form-group mt-4">
                        <input type="submit" value="@localization["AddOrEditModal.SubmitBtn.Text"]" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}