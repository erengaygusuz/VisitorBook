@model LoginRequestDto

@{
    Layout = "_AuthLayout";
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <div class="row">
                <img class="img-fluid mb-4 rounded mx-auto d-block"
                     src="~/img/icons/app-logo-primary.png"
                     alt=""
                     width="64"
                     height="64" />
            </div>
            <h1>@localization["Layout.Header.Title.Text"]</h1>
        </div>
        <div class="card-body">
            <p class="login-box-msg">@localization["Login.SubTitle.Text"]</p>

            <form asp-controller="Auth" asp-action="Login" asp-route-returnurl="@Context.Request.Query["returnURL"]" method="post">
                <div class="input-group mb-3">
                    <input type="email"
                           class="form-control"
                           data-val="true"
                           data-val-required="@localization["Validators.Login.Message1.Text"]"
                           placeholder="@localization["Login.Item1.Text"]"
                           asp-for="@Model.Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <span asp-validation-for="@Model.Email" class="error invalid-feedback"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="password"
                           class="form-control"
                           data-val="true"
                           data-val-required="@localization["Validators.Login.Message2.Text"]"
                           placeholder="@localization["Login.Item2.Text"]" asp-for="@Model.Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="@Model.Password" class="error invalid-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" asp-for="@Model.RememberMe">
                            <label for="RememberMe" asp-for="@Model.RememberMe">
                                @localization["Login.Item3.Text"]
                            </label>
                        </div>
                    </div>

                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">@localization["Login.SubmitBtn1.Text"]</button>
                    </div>

                </div>
            </form>
            <p class="mb-1">
                <a asp-controller="Auth" asp-action="ForgotPassword">@localization["Login.Item4.Text"]</a>
            </p>
            <p class="mb-1">
                <a asp-controller="Auth" asp-action="Register" class="text-center">@localization["Login.Item5.Text"]</a>
            </p>
            <p>
                <a asp-controller="Home" asp-action="Index" class="text-center">@localization["Login.Item6.Text"]</a>
            </p>
            <p>
                <div class="full-width">
                    <partial name="_CulturePartial" />
                </div>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}