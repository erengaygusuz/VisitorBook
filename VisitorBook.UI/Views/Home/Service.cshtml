
@{
    ViewData["Title"] = "Service";
    Layout = "_Layout";
}

<div class="container-fluid page-header mt-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-4 animated slideInDown mb-4">@localization["Home.Navbar.Item2.Text"]</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#">@localization["Home.Navbar.Item1.Text"]</a></li>
                <li class="breadcrumb-item active" aria-current="page">@localization["Home.Navbar.Item2.Text"]</li>
            </ol>
        </nav>
    </div>
</div>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto" style="max-width: 500px">
            <h1 class="display-6 mb-5">
                @localization["Home.Service.Title1.Text"]
            </h1>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item rounded h-100 p-5">
                    <div class="d-flex align-items-center ms-n5 mb-4">
                        <div class="service-icon flex-shrink-0 bg-primary rounded-end me-4">
                            <img class="img-fluid"
                                 src="~/img/icon/icon-10-light.png"
                                 alt="" />
                        </div>
                        <h4 class="mb-0">@localization["Home.Service.SubTitle1.Text"]</h4>
                    </div>
                    <p class="mb-4">
                        @localization["Home.Service.Info1.Text"]
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item rounded h-100 p-5">
                    <div class="d-flex align-items-center ms-n5 mb-4">
                        <div class="service-icon flex-shrink-0 bg-primary rounded-end me-4">
                            <img class="img-fluid"
                                 src="~/img/icon/icon-01-light.png"
                                 alt="" />
                        </div>
                        <h4 class="mb-0">@localization["Home.Service.SubTitle2.Text"]</h4>
                    </div>
                    <p class="mb-4">
                        @localization["Home.Service.Info2.Text"]
                    </p>
                    <p class="mb-4">
                        @localization["Home.Service.Info3.Text"]
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item rounded h-100 p-5">
                    <div class="d-flex align-items-center ms-n5 mb-4">
                        <div class="service-icon flex-shrink-0 bg-primary rounded-end me-4">
                            <img class="img-fluid"
                                 src="~/img/icon/icon-05-light.png"
                                 alt="" />
                        </div>
                        <h4 class="mb-0">@localization["Home.Service.SubTitle3.Text"]</h4>
                    </div>
                    <p class="mb-4">
                        @localization["Home.Service.Info4.Text"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>