@model CountyEditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@Model.CountyResponseDto.Id" onsubmit="return EditRecord(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountyResponseDto.Id" />
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="CountyResponseDto.Name" class="control-label">@localization["Counties.Table.Column1.Text"]</label>
                    <input asp-for="CountyResponseDto.Name" class="form-control" />
                    <span asp-validation-for="CountyResponseDto.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CountyResponseDto.Latitude" class="control-label">@localization["Counties.Table.Column4.Text"]</label>
                        <input asp-for="CountyResponseDto.Latitude" class="form-control" />
                        <span asp-validation-for="CountyResponseDto.Latitude" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CountyResponseDto.Longitude" class="control-label">@localization["Counties.Table.Column3.Text"]</label>
                        <input asp-for="CountyResponseDto.Longitude" class="form-control" />
                        <span asp-validation-for="CountyResponseDto.Longitude" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="CountyResponseDto.CityId" class="control-label">@localization["Counties.Table.Column2.Text"]</label>
                    <select asp-for="CountyResponseDto.CityId" asp-items="@Model.CityList" class="form-select">
                        <option disabled selected>@localization["AddOrEditModal.CitySelection.Text"]</option>
                    </select>
                    <span asp-validation-for="CountyResponseDto.CityId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="form-group mt-4">
                        <input type="submit" value="@localization["AddOrEditModal.SubmitBtn.Text"]" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}