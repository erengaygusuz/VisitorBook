@model ErrorViewModel

<div class="container-fluid page-header wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-4 animated slideInDown mb-4">@localization["Errors.Title.Text"]</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">@localization["Home.Navbar.Item1.Text"]</li>
                <li class="breadcrumb-item active" aria-current="page">
                    @localization["Errors.Title.Text"]
                </li>
            </ol>
        </nav>
    </div>
</div>
<div class="container-xxl py-0 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <i class="bi bi-exclamation-triangle display-1 text-primary"></i>
                <h1 class="mb-4 mt-5">@Model.StatusCode</h1>
                <p class="mb-4">
                    @localization["StatusCodes." + @Model.StatusCode + ".Text"]
                </p>
                <a class="btn btn-primary py-3 px-5" asp-controller="Home" asp-action="Index">@localization["Errors.BackBtn.Text"]</a>
            </div>
        </div>
    </div>
</div>