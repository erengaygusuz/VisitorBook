@model VisitorAddViewModel

@{
    ViewData["Title"] = "Add";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Add" onsubmit="return AddRecord(this);"
            autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="VisitorAddRequestDto.Name"
                        class="control-label">@localization["Visitors.Table.Column1.Text"]</label>
                    <input asp-for="VisitorAddRequestDto.Name" class="form-control" />
                    <span asp-validation-for="VisitorAddRequestDto.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="VisitorAddRequestDto.Surname"
                        class="control-label">@localization["Visitors.Table.Column2.Text"]</label>
                    <input asp-for="VisitorAddRequestDto.Surname" class="form-control" />
                    <span asp-validation-for="VisitorAddRequestDto.Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="VisitorAddRequestDto.BirthDate"
                            class="control-label">@localization["Visitors.Table.Column3.Text"]</label>
                        <input asp-for="VisitorAddRequestDto.BirthDate" class="form-control" />
                        <span asp-validation-for="VisitorAddRequestDto.BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="VisitorAddRequestDto.Gender"
                            class="control-label">@localization["Visitors.Table.Column4.Text"]</label>
                        <select asp-for="VisitorAddRequestDto.Gender" asp-items="@Model.GenderList" class="form-select">
                            <option disabled selected>@localization["AddOrEditModal.GenderSelection.Text"]</option>
                        </select>
                        <span asp-validation-for="VisitorAddRequestDto.Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="form-group">
                    <label asp-for="VisitorAddRequestDto.CityId"
                        class="control-label">@localization["Visitors.Table.Column6.Text"]</label>
                    <select id="citylist" onchange="cityChange()" asp-for="VisitorAddRequestDto.CityId"
                        asp-items="@Model.CityList" class="form-select">
                        <option disabled selected value="0">@localization["AddOrEditModal.CitySelection.Text"]</option>
                    </select>
                    <span asp-validation-for="VisitorAddRequestDto.CityId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4" id="countylist">
                <div class="form-group">
                    <label asp-for="VisitorAddRequestDto.CountyId"
                        class="control-label">@localization["Visitors.Table.Column7.Text"]</label>
                    <select id="county-id" asp-for="VisitorAddRequestDto.CountyId" asp-items="@Model.CountyList" class="form-select">
                        <option disabled selected value="0">@localization["AddOrEditModal.CountySelection.Text"]
                        </option>
                    </select>
                    <span asp-validation-for="VisitorAddRequestDto.CountyId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="form-group mt-4">
                        <input type="submit" value="@localization["AddOrEditModal.SubmitBtn.Text"]"
                            class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}