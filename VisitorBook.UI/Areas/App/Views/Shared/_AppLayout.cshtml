<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@localization["Layout.Header.Title.Text"]</title>

    <!-- Google Web Fonts -->
    <link rel="stylesheet" href="~/css/plugins/google-web-fonts/google-web-fonts.min.css" />

    <!-- Font Awesome 5.15.4 -->
    <link rel="stylesheet" href="~/css/plugins/fontawesome-free/css/all.min.css" />

    <!-- Tempusdominus Bootstrap4 5.39.0 -->
    <link rel="stylesheet" href="~/css/plugins/tempusdominus-bootstrap-4/tempusdominus-bootstrap-4.min.css" />

    <!-- Select2 4.0.13 -->
    <link rel="stylesheet" href="~/css/plugins/select2/select2.min.css" />
    <link rel="stylesheet" href="~/css/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" />

    <!-- Icheck Bootstrap 3.0.1 -->
    <link rel="stylesheet" href="~/css/plugins/icheck-bootstrap/icheck-bootstrap.min.css" />

    <!-- Admin Lte 3.2.0 -->
    <link rel="stylesheet" href="~/css/main/admin-lte/adminlte.min.css" />

    <!-- Overlay Scrollbars 1.13.0 -->
    <link rel="stylesheet" href="~/css/plugins/overlayScrollbars/OverlayScrollbars.min.css" />

    <!-- DataTables 1.11.4 -->
    <link rel="stylesheet" href="~/css/plugins/datatables-bs4/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/css/plugins/datatables-responsive/responsive.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/css/plugins/datatables-buttons/buttons.bootstrap4.min.css" />

    <!-- Flag Icon -->
    <link rel="stylesheet" href="~/css/plugins/flag-icon-css/flag-icon.css" />

    <!-- Sweet Alert2 11.4.0 -->
    <link rel="stylesheet" href="~/css/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" />

    <!-- Toastr -->
    <link rel="stylesheet" href="~/css/plugins/toastr/toastr.min.css" />

    <!-- Mvc Grid 7.2.0 -->
    <link rel="stylesheet" href="~/css/plugins/mvc-grid/mvc-grid.min.css" />

    <!-- App Layout -->
    <link rel="stylesheet" href="~/css/custom/app-layout.css" />

</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">

        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/img/icons/app-logo-primary.png" alt="VisitorBookLogo" height="60" width="60">
        </div>

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                @await Html.PartialAsync("_CulturePartial")
                @await Html.PartialAsync("_ProfileMenuPartial")
            </ul>
        </nav>
        <partial name="_MainSidebar" />

        <div class="content-wrapper">
            @RenderBody()
        </div>

        <div class="modal fade" tabindex="-1" id="form-modal">
            <div class="modal-dialog" id="general-modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title"></h2>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                    </div>
                </div>
            </div>
        </div>

        <footer class="main-footer text-center">
            <strong>Copyright &copy; 2023 - @DateTime.Now.Year - @localization["Layout.Header.Title.Text"]</strong>
        </footer>
    </div>

    <!-- jQuery 3.6.0 -->
    <script src="~/js/plugins/jquery-3.6.0/jquery.min.js"></script>

    <!-- jQuery UI 1.11.4 -->
    <script src="~/js/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>

    <!-- Bootstrap 4.6.1 -->
    <script src="~/js/main/bootstrap4/bootstrap.bundle.min.js"></script>

    <!-- Moment -->
    <script src="~/js/plugins/moment/moment-with-locales.min.js"></script>

    <!-- Tempusdominus Bootstrap4 5.39.0 -->
    <script src="~/js/plugins/tempusdominus-bootstrap-4/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Overlay Scrollbars 1.13.0 -->
    <script src="~/js/plugins/overlayScrollbars/jquery.overlayScrollbars.min.js"></script>

    <!-- Admin Lte 3.2.0 -->
    <script src="~/js/main/admin-lte/adminlte.min.js"></script>

    <!-- DataTables & Plugins -->
    <script src="~/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js/plugins/datatables-bs4/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/plugins/datatables-responsive/dataTables.responsive.min.js"></script>
    <script src="~/js/plugins/datatables-responsive/responsive.bootstrap4.min.js"></script>
    <script src="~/js/plugins/datatables-buttons/dataTables.buttons.min.js"></script>
    <script src="~/js/plugins/datatables-buttons/buttons.bootstrap4.min.js"></script>
    <script src="~/js/plugins/datatables-buttons/buttons.html5.min.js"></script>
    <script src="~/js/plugins/datatables-buttons/buttons.print.min.js"></script>
    <script src="~/js/plugins/datatables-buttons/buttons.colVis.min.js"></script>

    <!-- JsZip 3.7.1 -->
    <script src="~/js/plugins/jszip/jszip.min.js"></script>

    <!-- Pdf Make 0.2.4 -->
    <script src="~/js/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/js/plugins/pdfmake/vfs_fonts.min.js"></script>

    <!-- Datetime Moment 1.7 -->
    <script src="~/js/plugins/datetime-moment/datetime-moment.min.js"></script>

    <!-- Sweet Alert2 11.4.0 -->
    <script src="~/js/plugins/sweetalert2/sweetalert2.min.js"></script>

    <!-- Toastr -->
    <script src="~/js/plugins/toastr/toastr.min.js"></script>

    <!-- Select2 4.0.13 -->
    <script src="~/js/plugins/select2/select2.full.min.js"></script>
    <script src="~/js/plugins/select2/i18n/tr.js"></script>
    <script src="~/js/plugins/select2/i18n/en.js"></script>

    <!-- InputMask 5.0.7 -->
    <script src="~/js/plugins/inputmask/jquery.inputmask.min.js"></script>

    <!-- Mvc Grid 7.2.0 -->
    <script src="~/js/plugins/mvc-grid/mvc-grid.min.js"></script>

    @if (@Thread.CurrentThread.CurrentCulture.Name == "tr-TR")
    {
        <script src="~/js/plugins/mvc-grid/mvc-grid-lang.min.js"></script>
    }

    <script>
        document.querySelectorAll(".mvc-grid").forEach(element => new MvcGrid(element));
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    @await Component.InvokeAsync("Notyf")
</body>
</html>
